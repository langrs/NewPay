<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_permissions_dialog_title"
            style="@style/PermissionsDialog.Title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/Message.PermissionDialog.Title"/>

        <TextView
            android:id="@+id/fragment_permissions_dialog_message"
            style="@style/PermissionsDialog.Body"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/fragment_permissions_dialog_action_message_common_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_permissions_dialog_action_message_common"
                style="@style/PermissionsDialog.Body"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/Message.PermissionAction.Common"/>

            <TextView
                android:id="@+id/fragment_permissions_dialog_action_message_common_question"
                style="@style/PermissionsDialog.CommonActionMessage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/Message.PermissionAction.Common.Question"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingBottom="8.0dip"
            android:paddingRight="8.0dip"
            android:paddingTop="24.0dip">

            <TextView
                android:id="@+id/fragment_permissions_dialog_button_yes"
                style="@style/PermissionsDialog.Action.Yes"
                android:text="@string/dialog_button_title_yes"/>

            <TextView
                android:id="@+id/fragment_permissions_dialog_button_no"
                style="@style/PermissionsDialog.Action"
                android:text="@string/dialog_button_title_no"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>