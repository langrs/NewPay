<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

    <Button
        android:id="@+id/view_empty_card_flipper_addItemButton"
        style="@style/Text.EmptyCard.ButtonTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.CardView
        android:id="@+id/view_empty_card_flipper_detail_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/Padding.Material.Standard"
        android:clickable="true"
        android:foreground="@drawable/bg_transparent_selector"
        app:cardBackgroundColor="@color/White"
        app:cardCornerRadius="2.0dip"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/view_empty_card_flipper_title"
                style="@style/Text.EmptyCard.CardTitle.Material"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"/>

            <FrameLayout
                android:id="@+id/view_empty_card_flipper_contentContainer"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</merge>