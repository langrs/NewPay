<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/view_order_item_orderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Groceries"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/view_order_item_order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_order_item_orderId"
        android:layout_margin="16dp"
        android:text="This description describes a describable item"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/view_order_item_action"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:src="@drawable/ic_cart_edit_vip"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/view_order_item_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/view_order_item_orderId"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toLeftOf="@id/view_order_item_action"
        android:layout_toStartOf="@id/view_order_item_action"
        android:text="127$"
        android:textSize="15sp" />

</RelativeLayout>