<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/print_width"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/print_order_vipno_prompt"
            style="@style/print_text_size"
            android:text="会员:"/>

        <TextView
            android:id="@+id/print_order_vipno"
            style="@style/print_text_size"
            android:layout_toRightOf="@id/print_order_vipno_prompt"
            android:text="21000028060"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10px"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            >

            <TextView
                android:id="@+id/print_order_vip_points_prompt"
                style="@style/print_text_size"
                android:text="本次积分:"/>

            <TextView
                android:id="@+id/print_order_vip_points"
                style="@style/print_text_size"
                android:layout_toRightOf="@id/print_order_vip_points_prompt"
                android:text="0010"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            >

            <TextView
                android:id="@+id/print_order_vip_original_points_prompt"
                style="@style/print_text_size"
                android:text="上期积分:"/>

            <TextView
                android:id="@+id/print_order_vip_original_points"
                style="@style/print_text_size"
                android:layout_toRightOf="@id/print_order_vip_original_points_prompt"
                android:text="0010"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>