<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:divider="@android:drawable/divider_horizontal_bright"
    android:minWidth="400dp"
    android:orientation="vertical"
    android:showDividers="middle" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/Padding.Material.Standard.Double"
			android:layout_marginBottom="@dimen/Padding.Material.Standard.Double"
			android:gravity="center_vertical"
			>
			<TextView
				android:id="@+id/fragment_query_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="@dimen/Padding.Material.Standard.Quadruple"
				android:layout_centerVertical="true"
				android:textColor="@color/TextColor.Black"
				android:textStyle="bold"
				android:textSize="@dimen/TextSize.Large"
				android:text="券查询"
				/>

			<TextView
				android:id="@+id/fragment_query_scan"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="@dimen/Padding.Material.Standard.Quadruple"
				android:drawableLeft="@drawable/ic_scan_blue"
				android:layout_centerVertical="true"
				android:gravity="center"
				android:layout_alignParentRight="true"
				android:textSize="@dimen/TextSize.Material.Title"
				android:textColor="@color/PrimaryBlue"
				android:text="扫码"
				/>

		</RelativeLayout>


        <LinearLayout
			android:id="@+id/fragment_query_input_container"
            android:layout_width="match_parent"
        	android:layout_height="112dp"
        	android:gravity="center"
        	android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingLeft="@dimen/Padding.Material.Standard.Quadruple"
	            android:textColor="@color/TextColor.Black"
	            android:text="号码" />
            <EditText
	            android:id="@+id/fragment_query_input"
	            android:layout_width="match_parent"
	            android:layout_height="48dp"
	            android:layout_marginLeft="@dimen/Padding.Material.Standard.Quadruple"
	            android:layout_marginRight="@dimen/Padding.Material.Standard.Quadruple"
	            android:inputType="number"
	            android:imeOptions="flagNoExtractUi|actionDone"
	            android:hint="请输入券号码"
	            />
        </LinearLayout>

		<!-- 严格模式时,不能手动输入,只能刷卡 -->
		<TextView
				android:id="@+id/fragment_query_message"
				android:layout_width="match_parent"
				android:layout_height="48dp"
				android:layout_marginLeft="@dimen/Padding.Material.Standard.Quadruple"
				android:layout_marginRight="@dimen/Padding.Material.Standard.Quadruple"
				android:text="请刷卡"
				android:visibility="gone"
				/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:drawable/divider_horizontal_bright"
        android:orientation="horizontal"
        android:showDividers="middle" >

        <Button
            android:id="@+id/fragment_query_cancel_btn"
            style="@android:style/Widget.Holo.Light.Button.Borderless.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="@color/TextColor.Grey" />

        <Button
            android:id="@+id/fragment_query_ok_btn"
            style="@android:style/Widget.Holo.Light.Button.Borderless.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确定"
            android:textColor="@color/PrimaryBlue" />
    </LinearLayout>

</LinearLayout>