<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="@dimen/Padding.Material.Standard"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/fragment_create_coupon_by_sale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/Card.Padding.Material.Standard"
        android:clickable="true"
        android:minHeight="200dp"
        android:background="@drawable/bg_card_button_ripple"
        app:cardCornerRadius="@dimen/Card.CornerRadius"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="200dp"
            android:layout_margin="@dimen/Padding.Material.Standard"
            android:layout_marginBottom="@dimen/Padding.Material.Standard"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/TextSize.Material.Headline"
            android:text="销售兑券"
            android:textColor="@color/TextColor.Black"
            />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/fragment_create_coupon_by_points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginTop="@dimen/Padding.Large"
        android:background="@drawable/bg_card_button_ripple"
        app:cardCornerRadius="@dimen/Card.CornerRadius"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="200dp"
            android:layout_gravity="center"
            android:textSize="@dimen/TextSize.Material.Headline"
            android:textColor="@color/TextColor.Black"
            android:gravity="center"
            android:text="积分兑券"
            />
    </android.support.v7.widget.CardView>
</LinearLayout>