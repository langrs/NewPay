<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="@dimen/print_width"
              android:layout_height="wrap_content">
        <TextView
            android:id="@+id/print_order_product_name"
            style="@style/print_text_size_item"
            android:layout_width="@dimen/print_width"
            android:layout_height="wrap_content"
            android:text="商品名称"
            />
        <LinearLayout
            android:layout_width="@dimen/print_width"
            android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/print_order_product_rownumber"
                    style="@style/print_text_size_item"
                    android:layout_width="120dip"
                    android:layout_height="wrap_content"
                    android:text="1"
                    />

                <TextView
                    android:id="@+id/print_order_product_quantity"
                    style="@style/print_text_size_item"
                    android:layout_width="70dip"
                    android:layout_height="wrap_content"
                    android:text="数量"
                    />
                <TextView
                    android:id="@+id/print_order_product_unitprice"
                    style="@style/print_text_size_item"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:text="单价"
                    />
                <TextView
                    android:id="@+id/print_order_product_subtotal"
                    style="@style/print_text_size_item"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:text="小计"
                    />
        </LinearLayout>

</LinearLayout>