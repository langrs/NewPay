<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="@dimen/print_width"
              android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="@dimen/print_width"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/print_order_pay_name"
            style="@style/print_text_size"
            android:text="储值卡"
            />
        <TextView
            android:id="@+id/print_order_pay_amount"
            android:layout_marginLeft="5dip"
            style="@style/print_text_size"
            android:text="8000.00"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/print_order_pay_billNo_container"
        android:layout_width="@dimen/print_width"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >
        <TextView
            style="@style/print_text_size"
            android:layout_width="100dp"
            android:gravity="right"
            android:text="号码"
            />
        <TextView
            android:id="@+id/print_order_pay_billNo"
            android:layout_marginLeft="10dip"
            style="@style/print_text_size"
            />
    </LinearLayout>

</LinearLayout>