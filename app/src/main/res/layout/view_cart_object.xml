<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/view_cart_object_background_item_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/bg_transparent_button_selector"
    android:orientation="horizontal">


    <!--android:layout_width="fill_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_toRightOf="@id/view_cart_object_item_container"-->
    <!--android:layout_weight="1.0"-->
    <LinearLayout
        android:id="@+id/view_cart_object_desc_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/Padding.Material.Standard"
        android:layout_marginRight="@dimen/Padding.ListItem.Inner"
        android:layout_marginTop="@dimen/Padding.ListItem.Inner"
        android:orientation="vertical"
        android:paddingBottom="@dimen/Padding.Small">

        <!--<TextView-->
            <!--android:id="@+id/view_cart_object_brand"-->
            <!--style="@style/Text.CartItem.Head"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="百丽"-->
            <!--android:textColor="@color/TextColor.VeryLight"-->
            <!--android:textSize="@dimen/TextSize.VerySmall"-->
            <!--/>-->

        <TextView
            android:id="@+id/view_cart_object_name"
            style="@style/Text.CartItem.Head"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="女鞋"
            />

        <TextView
            android:id="@+id/view_cart_object_number"
            style="@style/Text.CartItem.Body"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="100100118755"
            android:textColor="@color/Gray"
            />

        <TextView
            android:id="@+id/view_cart_object_prom"
            style="@style/Text.Small"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/TextColor.Accent"/>

    </LinearLayout>

    <View style="@style/Divider.Vertical.Light"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/view_cart_object_price_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/MinTouchableArea"
            android:minWidth="@dimen/MinTouchableArea"
            android:background="@drawable/bg_list_item_product_list"
            android:padding="@dimen/Padding.Small">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="@dimen/Padding.Small"
                android:src="@drawable/ic_cart_item_menu"/>

                <TextView
                    android:id="@+id/view_cart_object_price"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="¥ 20.12"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="@dimen/TextSize.Material.Body"
                    />
        </FrameLayout>

        <FrameLayout style="@style/Divider.Horizontal.Light"/>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/MinTouchableArea"
            android:minWidth="@dimen/MinTouchableArea"
            >

            <Spinner
                android:id="@+id/view_cart_object_quantity"
                style="@style/CartItemQuantitySpinnerStyle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>