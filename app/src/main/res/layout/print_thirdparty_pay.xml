<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="@dimen/print_width"
              android:layout_height="wrap_content"
              android:background="#ffffffff"
    >

    <TextView
        android:id="@+id/print_thirdparty_title"
        style="@style/print_text_size_title"
        android:layout_width="@dimen/print_width"
        android:gravity="center"
        android:text="微信签购单"
        />

    <RelativeLayout
        android:layout_width="@dimen/print_width"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/print_thirdparty_stub_prompt"
            style="@style/print_text_size"
            android:text="商户存根"/>

        <TextView
            style="@style/print_text_size"
            android:text="请妥善保管"
            android:layout_alignParentRight="true"
            android:paddingRight="10px"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/print_line_tag"
        style="@style/print_text_size_big"
        android:layout_marginBottom="5.0px"
        android:text="----------------------------------"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/print_reprint_tag"
        style="@style/print_text_size_big"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10px"
        android:text="-----------------重打印!-------------------"
        android:visibility="gone"
        />

    <RelativeLayout
        android:layout_width="@dimen/print_width"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/print_shop_name_prompt"
            style="@style/print_text_size"
            android:text="商户名称:"/>

        <TextView
            android:id="@+id/print_shop_name"
            style="@style/print_text_size"
            android:text=""
            android:layout_alignParentRight="true"
            android:paddingRight="10px"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="@dimen/print_width"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/print_store_name_prompt"
            style="@style/print_text_size"
            android:text="商户门店:"/>

        <TextView
            android:id="@+id/print_store_name"
            style="@style/print_text_size"
            android:text=""
            android:layout_alignParentRight="true"
            android:paddingRight="10px"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="@dimen/print_width"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/print_mch_id_prompt"
            style="@style/print_text_size"
            android:text="商户编号:"/>

        <TextView
            android:id="@+id/print_mch_id"
            style="@style/print_text_size"
            android:text=""
            android:layout_alignParentRight="true"
            android:paddingRight="10px"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="@dimen/print_width"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/print_pos_no_prompt"
            style="@style/print_text_size"
            android:text="终端编号:"/>

        <TextView
            android:id="@+id/print_pos_no"
            style="@style/print_text_size"
            android:text=""
            android:layout_alignParentRight="true"
            android:paddingRight="10px"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="@dimen/print_width"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/print_user_no_prompt"
            style="@style/print_text_size"
            android:text="操作员号:"/>

        <TextView
            android:id="@+id/print_user_no"
            style="@style/print_text_size"
            android:text=""
            android:layout_alignParentRight="true"
            android:paddingRight="10px"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="@dimen/print_width"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/print_trade_type_prompt"
            style="@style/print_text_size"
            android:text="交易类别:"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/print_trade_type"
        style="@style/print_text_size"
        android:layout_width="@dimen/print_width"
        android:gravity="center"
        android:text="消费"
        />
    <RelativeLayout
        android:layout_width="@dimen/print_width"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/print_datetime_prompt"
            style="@style/print_text_size"
            android:text="日期/时间:"/>

        <TextView
            android:id="@+id/print_datetime"
            style="@style/print_text_size"
            android:layout_alignParentRight="true"
            android:paddingRight="10px"
            android:text=""
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="@dimen/print_width"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/print_thirdparty_no_prompt"
            style="@style/print_text_size"
            android:text="参考号:"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/print_thirdparty_no"
        style="@style/print_text_size"
        android:layout_width="@dimen/print_width"
        android:paddingRight="10px"
        android:text=""
        />
    <RelativeLayout
        android:layout_width="@dimen/print_width"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/print_amount_prompt"
            style="@style/print_text_size"
            android:text="金额:"/>

        <TextView
            android:id="@+id/print_amount"
            style="@style/print_text_size"
            android:layout_alignParentRight="true"
            android:paddingRight="10px"
            android:text=""
            />
    </RelativeLayout>
    <TextView
        style="@style/print_text_size_big"
        android:layout_marginBottom="80.0px"
        android:text="----------------------------------"
        android:textStyle="bold"/>
</LinearLayout>